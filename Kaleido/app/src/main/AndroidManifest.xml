<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uw.rtduong.kaleido">

    <application
        android:allowBackup="true"
        android:icon="@drawable/title_image"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".MenuActivity"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="sensorLandscape">
            >
        </activity>
        <activity
            android:name=".SelectStoryActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".StoryActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".SmoothieActivity"
            android:screenOrientation="sensorLandscape"></activity>
    </application>

</manifest>